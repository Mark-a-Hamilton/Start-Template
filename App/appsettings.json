{
  "AllowedHosts": "*",
  "layout": {
    "Skin": "spacelab", // allowed values - cerulean, cosmo, cyborg, darkly, quartz, solar, spacelab, superhero, vapor & zephyr
    "Style": "1" // Allowed Values 1-4 default is 4
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.MSSQLServer", "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "MSSqlServer", // Write to MS SQL Server
        "Args": {
          "autoCreateSqlTable": true,
          "tableName": "Log"
        }
      },
      {
        "Name": "File", // Write log to File
        "Args": {
          "path": "Logs/applog-.json",
          "rollingInterval": "Day"
        }
      }
    ]
  } 
}
